{
  "name": "njk-loader",
  "private": true,
  "version": "0.1.0",
  "description": "webpack loader to bundle nunjucks templates",
  "main": "./src/loader.js",
  "repository": "https://github.com/chrisfarms/njk-loader",
  "scripts": {
    "test": "npm -s run test-build && npm -s run test-node && npm -s run test-browser",
    "test-build": "webpack --config examples/test.config.js",
    "test-node": "for t in examples/tests/*.node.js; do node $t | faucet; done",
    "test-browser": "for t in examples/tests/*.web.js; do browser-run < $t | faucet; done"
  },
  "author": "@chrisfarms",
  "license": "MIT",
  "devDependencies": {
    "browser-run": "^4.1.3",
    "faucet": "0.0.1",
    "file-loader": "^1.1.6",
    "glob": "^7.1.2",
    "html-loader": "^0.5.5",
    "nunjucks": "^3.0.1",
    "proclaim": "^3.5.1",
    "webpack": "^4.0.0-beta.0",
    "webpack-cli": "^2.0.6",
    "webpack-merge": "^4.1.1"
  },
  "peerDependencies": {
    "nunjucks": "^3.0.1"
  },
  "dependencies": {
    "imports-loader": "^0.7.1",
    "loader-utils": "1.1.0"
  },
  "engines": {
    "node": "8.9.x",
    "npm": ">=5.x.x"
  },
  "xo": {
    "space": true,
    "overrides": [
      {
        "files": "**/*.js",
        "rules": {
          "no-console": "warn",
          "no-unused-vars": [
            "error",
            {
              "ignoreRestSiblings": true,
              "argsIgnorePattern": "(^_[a-z]|^t$)"
            }
          ]
        }
      }
    ]
  }
}
